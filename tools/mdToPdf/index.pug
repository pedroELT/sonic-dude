html
  head
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.1/css/bulma.min.css")
    link(rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css")
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    style.
      body {
        padding: 2vw;
      }
  body
    form(class='tile is-ancestor is-vertical' enctype='multipart/form-data' url='/mdToPdf' method='POST')
      div(class='tile is-parent')
        div(class='tile')
          div(class="file")
            label(class="file-label")
              input(type='hidden' name="MAX_FILE_SIZE" value="30000")
              input(class='file-input' name="markdown" type="file" accept=".md,.markdown")
              span(class="file-cta")
                span(class="file-icon")
                  i(class="fas fa-upload")
                span(class="file-label") Markdown file 
      div(class='tile is-parent')
        div(class='tile')
          OR
      div(class='tile is-parent')
        div(class='tile')
          textarea(name="markdownText" onchange="update()"  placeholder='Markdown' class='textarea')
      div(class='tile is-parent')
        div(class='tile')
          input(class='button is-info' type='submit' value='Convert')
        

      
        

